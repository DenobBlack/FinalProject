<Page x:Class="FinalProject.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="Ароматный мир | Авторизация">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Введите логин:"/>
        <TextBox Name="LoginTextBox" Width="140"/>
        <TextBlock Text="Введите пароль:"/>
        <PasswordBox Name="PasswordBox" Width="140"/>
        <WrapPanel>
            <Button Name="EnterButton" Content="Войти" Margin="5" Click="EnterButton_Click"/>
            <Button Name="EnterAsGuestButton" Content="Войти как гость" Margin="5" Click="EnterAsGuestButton_Click"/>
        </WrapPanel>
    </StackPanel>
</Page>
